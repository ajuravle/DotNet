@model WebApplication.Models.Movie
@{
    ViewBag.Title = "Edit";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Edit", "Movies", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Edit movie.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control", required = "required" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Genre, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Genre, new { @class = "form-control", required = "required" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.AgeRestriction, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.AgeRestriction, new { @class = "form-control", type = "number" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Edit" />
        </div>
    </div>
}

<a href="@Url.Action("Index", "Movies")">Back to List</a>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
