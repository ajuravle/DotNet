@model WebApplication.Models.Ticket
@{
    ViewBag.Title = "Create";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Create", "Tickets", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new ticket.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.Cinema.CinemaId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
              @Html.TextBoxFor(m => m.Cinema.CinemaId, new { @class = "form-control", required = "required" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movie.MovieId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Movie.MovieId, new { @class = "form-control", required = "required" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Price, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Price, new { @class = "form-control", type = "number" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.DateTime, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.DateTime, new { @type = "datetime-local", @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Create" />
        </div>
    </div>
}

<a href="@Url.Action("Index", "Tickets")">Back to List</a>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
